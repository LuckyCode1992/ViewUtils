<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".自定义控件.第七章_绘图进阶.发光效果和图片阴影.BlurMaskFilterActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                style="@style/layout_local"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    style="@style/layout_local"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <Button
                        android:text="发光效果"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.第七章_绘图进阶.发光效果和图片阴影.BlurMaskFilterView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    style="@style/layout_local"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <Button
                        android:text="图片添加纯色阴影"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.第七章_绘图进阶.发光效果和图片阴影.BitmapShadowView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>