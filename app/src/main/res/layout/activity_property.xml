<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".自定义控件.属性动画进阶.PropertyActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corners_5dp"
                android:padding="5dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_1"
                        android:text="简单的使用property values holder"
                        style="@style/button"/>
                <TextView
                        android:id="@+id/tv_1"
                        android:layout_margin="20dp"
                        android:background="@drawable/girl5"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_2"
                        android:text="字符变换"
                        style="@style/button"/>
                <com.justcode.hxl.viewutil.自定义控件.属性动画进阶.MyTextView
                        android:id="@+id/tv_2"
                        android:text="A"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:layout_margin="20dp"
                        android:background="#333333"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_3"
                        android:text="keyframe"
                        style="@style/button"/>
                <TextView
                        android:id="@+id/tv_3"
                        android:layout_margin="20dp"
                        android:background="@drawable/girl5"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_4"
                        android:text="响铃效果"
                        style="@style/button"/>
                <ImageView
                        android:id="@+id/iv_ring"
                        android:layout_margin="20dp"
                        android:background="@drawable/phone"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_5"
                        android:text="完整响铃效果"
                        style="@style/button"/>
                <ImageView
                        android:id="@+id/iv_ring2"
                        android:layout_margin="20dp"
                        android:background="@drawable/phone"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>
            </LinearLayout>
            <Button
                    android:id="@+id/btn_6"
                    android:text="ViewPropertyAnimator demo"
                    style="@style/button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>