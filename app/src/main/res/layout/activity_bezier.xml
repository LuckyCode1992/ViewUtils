<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".自定义控件.绘图进阶.贝塞尔曲线.BezierActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                style="@style/layout_local"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    style="@style/layout_local"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <Button
                        android:id="@+id/btn_bezier_2"
                        android:text="二阶贝塞尔曲线演示"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.绘图进阶.贝塞尔曲线.BezierView2
                        android:id="@+id/bezier_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_local"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <Button
                        android:id="@+id/btn_bezier_3"
                        android:text="三阶贝塞尔曲线演示"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.绘图进阶.贝塞尔曲线.BezierView3
                        android:id="@+id/bezier_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_local"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <Button
                        android:id="@+id/btn_bezier_4"
                        android:text="贝塞尔曲线实现波浪线"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.绘图进阶.贝塞尔曲线.BezierViewDemo
                        android:id="@+id/bezier_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_local"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <Button
                        android:id="@+id/btn_bezier_5"
                        android:text="贝塞尔曲线实现波浪线"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.绘图进阶.贝塞尔曲线.RquadToDemo
                        android:id="@+id/bezier_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>