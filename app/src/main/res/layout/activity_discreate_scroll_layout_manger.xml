<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".recycleview_util.DiscreateScrollLayoutMangerActivity">



    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_shop"
            android:text="商品横向滑动预览效果"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_weather"
            app:layout_constraintTop_toBottomOf="@+id/btn_shop"
            android:text="城市天气预报效果"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            app:layout_constraintTop_toBottomOf="@+id/btn_weather"
            android:id="@+id/btn_pic"
            android:text="纵向滑动图片展示效果"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>