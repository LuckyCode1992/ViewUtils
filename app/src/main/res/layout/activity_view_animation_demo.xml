<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".自定义控件.第二章_视图动画.ViewAnimationDemoActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:background="@drawable/shape_corners_5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_corners_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                <Button
                        android:id="@+id/btn_demo1"
                        android:text="镜头由远到近效果"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                <ImageView
                        android:id="@+id/iv_img"
                        android:layout_gravity="center"
                        android:src="@drawable/scenery"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_corners_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                <Button
                        android:id="@+id/btn_demo2"
                        android:text="加载框效果"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                <ImageView
                        android:id="@+id/iv_loading"
                        android:layout_gravity="center"
                        android:src="@drawable/loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_corners_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                <Button
                        android:id="@+id/btn_demo3"
                        android:text="扫描效果（音乐播放效果）"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <FrameLayout
                        android:background="#f8f8f8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                    <TextView
                            android:id="@+id/circle1"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <TextView
                            android:id="@+id/circle2"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <TextView
                            android:id="@+id/circle3"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>

                    <TextView
                            android:id="@+id/circle4"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <TextView
                            android:id="@+id/circle5"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <TextView
                            android:id="@+id/circle6"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <TextView
                            android:id="@+id/circle7"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <TextView
                            android:id="@+id/circle8"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <TextView
                            android:id="@+id/circle9"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="155dp"
                            android:layout_height="155dp"/>
                    <ImageView
                            android:id="@+id/iv_circle"
                            android:layout_gravity="center"
                            android:src="@drawable/scan_cover"
                            android:layout_width="140dp"
                            android:layout_height="140dp"/>
                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>