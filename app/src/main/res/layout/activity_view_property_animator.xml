<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".自定义控件.属性动画进阶.ViewPropertyAnimatorActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corners_5dp"
                android:padding="5dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_1"
                        android:text="简单使用 并比较"
                        style="@style/button"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/tv_1_1"
                            android:layout_margin="50dp"
                            android:background="@drawable/girl5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                    <TextView
                            android:id="@+id/tv_1_2"
                            android:layout_alignParentRight="true"
                            android:layout_margin="50dp"
                            android:background="@drawable/girl5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:background="@drawable/shape_corners_5dp"

                    android:orientation="vertical">

                <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_add"
                        android:text="添加控件"
                        style="@style/button"/>
                <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_remove"
                        android:text="移除控件"
                        style="@style/button"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:id="@+id/ll_true"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:background="#50ffff00"
                            android:layout_height="match_parent">

                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/ll_false"
                            android:animateLayoutChanges="false"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:background="#eee"
                            android:layout_height="match_parent">

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>