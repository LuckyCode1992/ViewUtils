<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corners_5dp"
                android:padding="5dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_1"
                        android:text="简单函数使用 只能看日志"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.动画进阶.PathMeasureSimpleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_2"
                        android:text="nextContour函数 看日志"
                        style="@style/button"/>

                <com.justcode.hxl.viewutil.自定义控件.动画进阶.PathMeasureSimpleView2
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_3"
                        android:text="getSegment 函数使用"
                        style="@style/button"/>

             <com.justcode.hxl.viewutil.自定义控件.动画进阶.PathMeasureSimpleView3
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_4"
                        android:text="路径加载动画"
                        style="@style/button"/>

             <com.justcode.hxl.viewutil.自定义控件.动画进阶.PathMeasureSimpleView4
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_corners_5dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_5"
                        android:text="完整响铃效果"
                        style="@style/button"/>

                <ImageView
                        android:id="@+id/iv_ring2"
                        android:layout_margin="20dp"
                        android:background="@drawable/phone"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>
            </LinearLayout>

            <Button
                    android:id="@+id/btn_6"
                    android:text="ViewPropertyAnimator demo"
                    style="@style/button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>