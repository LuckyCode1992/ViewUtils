<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".自定义控件.第七章_绘图进阶.shader.LinearGradientActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                style="@style/layout_local"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    style="@style/layout_local"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <Button
                        android:text="双色渐变"
                        style="@style/button"/>
                <com.justcode.hxl.viewutil.自定义控件.第七章_绘图进阶.shader.RadialGradientView1
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    style="@style/layout_local"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <Button
                        android:text="多色渐变 CLAMP"
                        style="@style/button"/>
                <com.justcode.hxl.viewutil.自定义控件.第七章_绘图进阶.shader.RadialGradientView2
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    style="@style/layout_local"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <Button
                        android:text="多色渐变 MIRROR"
                        style="@style/button"/>
                <com.justcode.hxl.viewutil.自定义控件.第七章_绘图进阶.shader.RadialGradientView3
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    style="@style/layout_local"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <Button
                        android:text="多色渐变 REPEAT"
                        style="@style/button"/>
                <com.justcode.hxl.viewutil.自定义控件.第七章_绘图进阶.shader.RadialGradientView4
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>